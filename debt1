    <script>
        // A variable to keep track of the current step in the survey
        let currentStep = 0;

        // Function to show a specific step of the survey
        function showStep(stepNumber) {
            // Hide the current step
            document.getElementById(`step-${currentStep}`).classList.add('hidden');
            // Show the new step
            document.getElementById(`step-${stepNumber}`).classList.remove('hidden');
            // Update the current step tracker
            currentStep = stepNumber;
        }

        // Function to move to the next step
        function nextStep(stepNumber) {
            showStep(stepNumber);
        }

        // Function to check the selected debt types
        function checkDebtType() {
            const selectedDebtType = document.querySelector('input[name="debtType"]:checked');

            // If no option is selected, do nothing.
            if (!selectedDebtType) {
                // You could add a message here to prompt the user to select an option.
                return;
            }

            const debtValue = selectedDebtType.value;

            // If the user selects "Credit Card Debt" or "Unsecured Debt", they proceed.
            if (debtValue === 'credit_card' || debtValue === 'unsecured_debt') {
                nextStep(3); // Move to the income step
            } else { 
                // If they select "Other", they are disqualified.
                disqualify();
            }
        }

        // Function to show the qualified message
        function qualify() {
            document.getElementById('survey-container').classList.add('hidden');
            document.getElementById('qualified-message').classList.remove('hidden');
        }

        // Function to show the disqualified message
        function disqualify() {
            document.getElementById('survey-container').classList.add('hidden');
            document.getElementById('disqualified-message').classList.remove('hidden');
        }
    </script>

