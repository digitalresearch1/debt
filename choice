          <span class="hl">Opt-in contact</span>
          By submitting information, users may be contacted about home warranty options by phone/email/text as permitted.
        </p>
        <p>
          <span class="hl">No guarantees</span>
          Coverage, pricing, eligibility, and availability vary and are determined by the provider.
        </p>
        <p>
          <span class="hl">Affiliate disclosure</span>
          The publisher may receive compensation if a user completes an action with a provider.
        </p>
      </div>
    </div>
  </div>

  <script>
    // Demo-only behavior: show a confirmation modal instead of actually submitting.
    const form = document.getElementById('leadForm');
    const yr = document.getElementById('yr');
    yr.textContent = new Date().getFullYear();

    const modalBackdrop = document.getElementById('modalBackdrop');
    const openDisclosures = document.getElementById('openDisclosures');
    const openDisclosures2 = document.getElementById('openDisclosures2');
    const closeModal = document.getElementById('closeModal');

    function showModal(){
      modalBackdrop.style.display = 'flex';
      modalBackdrop.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }
    function hideModal(){
      modalBackdrop.style.display = 'none';
      modalBackdrop.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }

    openDisclosures.addEventListener('click', (e)=>{ e.preventDefault(); showModal(); });
    openDisclosures2.addEventListener('click', (e)=>{ e.preventDefault(); showModal(); });
    closeModal.addEventListener('click', hideModal);
    modalBackdrop.addEventListener('click', (e)=>{ if(e.target === modalBackdrop) hideModal(); });

    function validEmail(email){
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
    }
    function validPhone(phone){
      const digits = phone.replace(/\D/g,'');
      return digits.length >= 10;
    }
    function validZip(zip){
      const digits = zip.replace(/\D/g,'');
      return digits.length >= 5;
    }

    form.addEventListener('submit', (e)=>{
      e.preventDefault();

      const data = Object.fromEntries(new FormData(form).entries());

      // Very light validation (demo)
      const errors = [];
      if(!data.first) errors.push("First name");
      if(!data.last) errors.push("Last name");
      if(!validEmail(data.email || "")) errors.push("Valid email");
      if(!validPhone(data.phone || "")) errors.push("Valid phone");
      if(!validZip(data.zip || "")) errors.push("Valid ZIP");
      if(!data.homeowner) errors.push("Homeowner selection");
      if(!data.interest) errors.push("Coverage interest");
      if(!data.timeline) errors.push("Timeline");

      if(errors.length){
        alert("Please check: " + errors.join(", "));
        return;
      }

      // Replace the below with real integration:
      // - POST to your endpoint/CRM
      // - then redirect to advertiser approved link with tracking
      //
      // Example redirect:
      // window.location.href = "https://YOUR_ADVERTISER_APPROVED_URL?subid=...";

      showModal();
    });
  </script>
</body>
</html>
